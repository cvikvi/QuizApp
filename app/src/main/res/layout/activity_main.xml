<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        tools:context="com.example.android.quizapp.MainActivity">

        <TextView
            android:id="@+id/question_one_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_one_text"

            />

        <CheckBox
            android:id="@+id/question_one_checkbox_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_one_answer_one"

            />

        <CheckBox
            android:id="@+id/question_one_checkbox_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_one_answer_two"

            />

        <CheckBox
            android:id="@+id/question_one_checkbox_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_one_answer_three"

            />

        <CheckBox
            android:id="@+id/question_one_checkbox_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_one_answer_four"

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_two_text"

            />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/question_two_answer_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_two_answer_one" />

            <RadioButton
                android:id="@+id/question_two_answer_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_two_answer_two" />

            <RadioButton
                android:id="@+id/question_two_answer_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_two_answer_three" />

            <RadioButton
                android:id="@+id/question_two_answer_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_two_answer_four" />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_three_text"

            />


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/question_three_answer_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_three_answer_one" />

            <RadioButton
                android:id="@+id/question_three_answer_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_three_answer_two" />

            <RadioButton
                android:id="@+id/question_three_answer_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_three_answer_three" />

            <RadioButton
                android:id="@+id/question_three_answer_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_three_answer_four" />

        </RadioGroup>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_four_text" />

        <EditText
            android:id="@+id/question_four_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/question_four_hint" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:onClick="scoreQuiz"
            android:text="@string/gradeButton"
            android:textAllCaps="true"

            />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>

